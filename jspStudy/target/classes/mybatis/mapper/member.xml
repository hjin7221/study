<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.jsp.member.dao.IMemberDAO">

	<!-- mybatis-config.xml에서 typeAlias로 MemberVO의 풀경로 생략 가능 -->
	<insert id="registMember" parameterType="com.study.jsp.member.vo.MemberVO">
		INSERT INTO members (
		    mem_id
		    ,mem_pw
		    ,mem_name
		    ,del_yn
		) VALUES (
		    #{memId}
		    ,#{memPw}
		    ,#{memName}
		    ,'N'
		)
	</insert>
	
	<select id="loginMember" parameterType="MemberVO" resultType="MemberVO">
		SELECT 
		    mem_id
		    ,mem_pw
		    ,mem_name
		FROM members
		WHERE 1=1
		 AND mem_id = #{memId}
		 AND mem_pw = #{memPw}
		 AND del_yn = 'N'
	</select>
	
	<update id="editMember" parameterType="com.study.jsp.member.vo.MemberVO">
		UPDATE members
		SET mem_pw = #{memPw}
		    , mem_name = #{memName}
		WHERE mem_id = #{memId}
	</update>
	
	<update id="delMember" parameterType="com.study.jsp.member.vo.MemberVO">
		UPDATE members
		SET del_yn = 'Y'
		WHERE mem_id = #{memId}
	</update>
</mapper>
